generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  resources Resource[]
  createdAt DateTime   @default(now())
}

model Resource {
  id        String     @id @default(uuid())
  name      String
  type      ResourceType
  keywords  String[]
  author    User       @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime   @default(now())
}

enum ResourceType {
  Blog
  Video
}
